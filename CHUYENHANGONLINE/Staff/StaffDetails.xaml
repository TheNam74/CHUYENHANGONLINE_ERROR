<Window x:Class="CHUYENHANGONLINE.Staff.StaffDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CHUYENHANGONLINE.Staff"
        mc:Ignorable="d"
        Title="Thông tin nhân viên" Height="239" Width="357" MinHeight="239" MinWidth="357" Loaded="StaffDetails_OnLoaded" Background="GhostWhite">
    <Canvas>
        <StackPanel Canvas.Left="28" Canvas.Top="40">
            <StackPanel Orientation="Horizontal">
                <Label Width="120">Họ tên</Label>
                <TextBlock Name="NameTextBlock" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Width="120">Số điện thoại</Label>
                <TextBlock Name="TelTextBlock"  VerticalAlignment="Center"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Width="120">Email</Label>
                <TextBlock Name="EmailTextBlock" VerticalAlignment="Center"></TextBlock>
            </StackPanel>

        </StackPanel>

    </Canvas>
</Window>
